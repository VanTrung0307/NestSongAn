@page
@model NestSongAn.Pages.Stocks.CreateModel
@{
}
<div class="text-center">
    <p class="h3 p-3">Create new Stock</p>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stocks.Code" class="control-label"></label>
                <input asp-for="Stocks.Code" class="form-control" />
                <span asp-validation-for="Stocks.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stocks.Name" class="control-label"></label>
                <input asp-for="Stocks.Name" class="form-control" />
                <span asp-validation-for="Stocks.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Stocks.Type" class="control-label"></label>
                <input asp-for="Stocks.Type" class="form-control">
                <span asp-validation-for="Stocks.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stocks.CreateDate" class="control-label"></label>
                <input asp-for="Stocks.CreateDate" class="form-control" />
                <span asp-validation-for="Stocks.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stocks.UpdateDate" class="control-label"></label>
                <input asp-for="Stocks.UpdateDate" class="form-control" />
                <span asp-validation-for="Stocks.UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stocks.ShopId" class="control-label"></label>
                <select asp-items="ViewBag.Shop" asp-for="Stocks.ShopId" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Stocks.GrandStockId" class="control-label"></label>
                <select asp-for="Stocks.GrandStockId" class="form-control" />
                
            </div>
            <div class="d-flex flex-row bd-highlight mb-2">
                <div class="p-2 bd-highlight">
                    <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure?')">
                        Create
                    </button>
                </div> |
                <div class="p-2 bd-highlight">
                    <a class="btn btn-outline-warning text-warning" asp-page="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>